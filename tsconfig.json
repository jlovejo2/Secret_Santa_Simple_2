{
	"compilerOptions": {
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./components/*"],
			"@hooks/*": ["./hooks/*"],
			"@lib/*": ["./lib/*"],
			"@graphql/*": ["./lib/graphql/*"],
			"@dao/*": ["./lib/dao/*"],
			"@auth/*": ["./lib/auth/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/graphql/schema.tsx"],
	"exclude": ["node_modules", ".next"]
}
